{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "cleanUrls": true,
  "regions": ["all"],
  "rewrites": [
    { "source": "/", "destination": "/en" },
    { "source": "/sv", "destination": "/sv/index" },
    { "source": "/en", "destination": "/en/index" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}